<% if @custom_view %>
	<%= render :partial => "facts/#{@custom_view}_fact_form" %>
<% else -%>
	<%= render :partial => 'facts/form', :locals => { :factable => @parent, :new_fact => true } %>
<% end -%>

<% if @enable_js -%>
<script type="text/javascript" language="JavaScript">
  jQuery(document).ready(function() {
    apply_ajax_forms();
		applyEditor();
  });
</script>
<% end -%>