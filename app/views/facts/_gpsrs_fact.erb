<div id="<%=fact.dom_id%>" class="gpsrs-fact-dot" <%=calculate_gpsrs_position(fact).html_safe%> ></div>
<div id="<%=fact.dom_id%>_content" class="gpsrs-fact" <%=calculate_gpsrs_position(fact).html_safe%>>
  <h3 class="fact-title"><%= fact.title %></h3>
  <% if fact.photo_file_name -%>
    <%= image_tag(fact.photo.url(:thumb), :class => 'thumb') %>
  <% end -%>
  <div class="fact-content">
    <%= fact.content %>
  </div>
  <div class="fact-admin" style="margin:3px;">
    <%= link_to 'Edit', edit_fact_url(fact, :format => 'js'), :class => 'inline-edit', :id => "edit_#{fact.dom_id}", :style => 'color:#333;' %>
    <%= link_to 'Delete', fact_url(fact), :class => 'ajax-delete', :style => 'color:#333;' %>
  </div>
</div>