<% if @success -%>
	jQuery('#<%=@app_link.dom_id%>').replaceWith(decodeHtml('<%= escape_javascript(render('app_links/app_link', :app_item => @app_link)) %>'));
	jQuery.fancybox.close();
	apply_content_fancybox();
<% else -%>
	<%= output_errors_ajax('messages-container', 'Please correct the following errors:', {:class => 'help-box'}, @app_link, true) %>
<% end -%>